#include <iostream>
using namespace std;

int main() {
  int x = 5;

  while(x >= 0){
    cout << x << endl;

    x--;
  }

  int num;
  int total = 0;
  cout << "Enter number, -1 to stop: ";
  cin >> num;

  while(num != -1){
    total += num;
    cout << "Enter number, -1 to stop: ";
    cin >> num;
  }

  cout << "The total is: " << total << endl;

  
}
